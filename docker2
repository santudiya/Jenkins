pipeline {
  agent {
    docker { image 'centos:latest' }
  }
  stages {
        stage('Hello') {
            environment {
                Santu_Username = credentials ('JENKINS-USERNAME')
                
            }
            steps {
                sh "echo 'My Github Token is $Santu_Username'"
                sh "echo 'My Username is $Santu_Username_USR'"
                sh "echo 'My Password is $Santu_Username_PSW'"
            }
        }
    }
